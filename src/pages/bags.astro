---
import ProductList from "../components/ProductList.astro";
import CategoryFilters from "../components/CategoryFilters.astro";
---

<html lang="en">
  <head>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Bellroy</title>
    <!-- HTML in your document's head -->
    <link rel="preconnect" href="https://rsms.me/" />
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css" />

    <style>
      /* CSS */
      :root {
        font-family: Inter, sans-serif;
        font-feature-settings:
          "liga" 1,
          "calt" 1; /* fix for Chrome */
      }
      @supports (font-variation-settings: normal) {
        :root {
          font-family: InterVariable, sans-serif;
        }
      }
    </style>
  </head>
  <body>
    <main
      class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-full lg:px-8"
    >
      <div class="border-b border-gray-200 pb-10">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900">Bags</h1>
        <p class="mt-4 text-base text-gray-500">
          Checkout out the latest release of Basic Tees, new and improved with
          four openings!
        </p>
      </div>

      <div class="pt-12 lg:grid lg:grid-cols-3 lg:gap-x-8 xl:grid-cols-6">
        <aside>
          <CategoryFilters />
        </aside>

        <!-- Product grid -->
        <div class="mt-6 lg:col-span-2 lg:mt-0 xl:col-span-5">
          <ProductList category="bags" />
        </div>
      </div>
    </main>
  </body>
</html>
